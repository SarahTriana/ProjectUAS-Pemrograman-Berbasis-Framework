generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/db_aktivitas"
}

model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  password  String
  activities Activity[]
}

model Activity {
  id              Int              @id @default(autoincrement())
  judul_aktivitas String
  kategori        String
  tanggal         DateTime
  user_id         Int

  user    User             @relation(fields: [user_id], references: [id], onDelete: Cascade)
  details ActivityDetail[] @relation("ActivityToDetail")
}

model ActivityDetail {
  id               Int      @id @default(autoincrement())
  aktivitas_id     Int
  nomor_detail     Int
  deskripsi_detail String
  durasi           Int
  status           String

  activity Activity @relation( "ActivityToDetail", fields: [aktivitas_id], references: [id], onDelete: Cascade )

  @@unique([aktivitas_id, nomor_detail])
}
